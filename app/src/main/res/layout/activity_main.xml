<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.example.bogusz.eartraining.MainActivity"
    android:padding="3dp"
    android:id="@+id/mainActivityId"

    >


    <ImageView
        android:layout_span="2"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:id="@+id/imageView3"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        />

    <TableLayout
        android:layout_weight="4"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">



        <TableRow android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:transitionName ="myFragment"
                android:layout_column="0"
                android:id="@+id/fragment_1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"

                />
            <fragment
                android:transitionName ="myFragment"
                android:layout_column="1"
                android:id="@+id/fragment_2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"
                />
        </TableRow>

        <TableRow android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:transitionName ="myFragment"
                android:layout_column="0"
                android:id="@+id/fragment_3"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"
                />
            <fragment
                android:transitionName ="myFragment"
                android:layout_column="1"
                android:id="@+id/fragment_4"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"
                />
        </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <fragment
                android:transitionName ="myFragment"
                android:layout_column="0"
                android:id="@+id/fragment_5"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"
                />
            <fragment
                android:transitionName ="myFragment"
                android:layout_column="1"
                android:id="@+id/fragment_6"
                android:layout_width="match_parent"
                android:gravity="center"
                android:name="com.example.bogusz.eartraining.IkonaFragment"
                tools:layout="@layout/fragment_ikona"
                />
        </TableRow>



    </TableLayout>
</LinearLayout>